@model NewsCenter.Models.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Noticias</title>
    <style>
        html, body {
            height: 100%;
            width: 100%;
            scroll-behavior: smooth;
        }

        .container {
            width: 100%;
            content: normal;
            display: flex;
            flex-flow: row wrap;
            background-size: cover;
            height: 100%;
            margin-left: -10px;
            margin-right: 0px;
        }

        header h1 {
            color: white;
            font-size: 50px;
            margin: 0;
        }

        header {
            background-color: #161f79;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            top: 0;
            width: 100%;
            margin-top: -20px;
            margin-left: -10px;
            padding: 0;
        }

        .Encabezado {
            background-color: #ffffff;
        }

        img {
            width: 60px;
        }

        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            height: 90%;
        }

        ul li {
            display: inline-block;
            padding: 0px 70px;
        }

        header a {
            font-size: 25px;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            background-color: black;
            padding: 5px 20px;
        }

        h1 {
            text-align: center;
            font-size: 40px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .fondo {
            background: no-repeat bottom;
            background-size: cover;
            margin: 0 20px;
            border-radius: 7px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .Noticias {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            width: 100%;
        }

        div.Noticia {
            background-color: white;
            margin: 10px 20px;
            box-shadow: 0 4px 8px 0 rgb(19, 5, 5);
            width: 22%;
            border-radius: 10px;
            text-align: center;
            font-size: 10px;
        }

            div.Noticia img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-radius: 10px 10px 0px 0px;
            }

            div.Noticia p {
                font-size: 15px;
                padding: 10px;
            }


        .container1 {
            display: flex;
            justify-content: left;
            max-width: 100%;
            margin: 5px 20px;
            
        }

        input {
            padding: 10px;
            border-radius: 15px;
            border: none;
            width: 400px;
            outline: none;
            font-size: 1rem;
            background-color:whitesmoke;
        }

        button {
            background-color: #2fb4cc;
            color: #fff;
            border-radius: 15px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 1rem;
        }

        .ver-mas {
            margin-left: 10px;
            padding: 10px;
        }

            .ver-mas a {
                text-decoration: none;
                color: lightsalmon;
                display: flex;
                align-items: center;
                font-size: 18px;
            }

                .ver-mas a i {
                    margin-left: 5px;
                }


        .NoticiaDia {
            background-color: #FFA0A0;
            border-radius: 12px;
            margin: 10px;
            text-align: center;
            font-size: 30px;
        }


        footer {
            background-color: #f1b30f;
            height: 42px;
            border-top: 1px groove lightgray;
            font-size: 20px;
            text-align: center;
            font-style: italic;
            line-height: 42px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 5px;
            align-items: center;
        }
      

           

    </style>
</head>
<body>
    <div class="Encabezado">
        <hr>
        <header>
            <nav class="nav-center">
                <h1>NewsCenter</h1>
            </nav>
        </header>
        <main>
            <form class="container1" method="get" action="~/Home/Index">
                <input type="text" placeholder="Buscar..." name="query">
                <button>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
            <h1>Noticias Carbonífera</h1>

            <div class="fondo">
                <div class="Noticias">
                    @foreach (var n in Model.Noticia)
                    {
                        <div class="Noticia">

                            <a href="@Url.Action("Pagina", "Home", new {id = n.Titulo.Replace(" ", "-")})" class="foto">
                                <img src="~/Imagenes/@(n.Id).jpg">
                            </a>
                            <div class="Info">
                                <p>@n.Titulo</p>
                                <p class="Fecha">@n.Fecha</p>
                            </div>
                        </div>

                    }


                </div>
                <div class="ver-mas">
                    <a href="#">
                        Ver más
                        <i class="fas fa-arrow-down"></i>
                    </a>
                </div>
            </div>

            <h2 class="NoticiaDia">Noticias del Día</h2>
            <div class="fondo">
                <div class="Noticias">
                    @if (Model.NoticiasDelDia != null && Model.NoticiasDelDia.Count() == 0)
                    {
                        <p>No hay noticias del dia</p>
                    }
                    @foreach (var n in Model.NoticiasDelDia)
                    {
                        <div class="Noticia">

                            <a href="@Url.Action("Pagina", "Home", new {id = n.Titulo.Replace(" ", "-")})" class="foto">
                                <img src="~/Imagenes/@(n.Id).jpg">
                            </a>
                            <div class="Info">
                                <p>@n.Titulo</p>
                                <p class="Fecha">@n.Fecha</p>
                            </div>
                        </div>

                    }
                </div>
                <div class="ver-mas">
                    <a href="#">
                        Ver más
                        <i class="fas fa-arrow-down"></i>
                    </a>
                </div>
            </div>
        </main>

        <footer>
           
        </footer>
    </div>
</body>
</html>

