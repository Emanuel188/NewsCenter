@model NewsCenter.Areas.Administrador.Models.AgregarNoticiaViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers    
@{
    ViewData["Title"] = "EditarNoticia";
}

<!DOCTYPE html>
<html>
<head>
    <title>Editar Noticia - NewsCenter</title>
    <link rel="stylesheet" href="~/styles.css">
</head>
<body>
    <main>
        <form action="~/administrador/home/editarnoticia" method="POST" enctype="multipart/form-data">
            <div>
                <h1>Editar Noticia</h1><br>
                <label>Titulo:</label>
                <input type="text" id="titulo" asp-for="Titulo" required /><br /> <br>
                <input hidden asp-for="NoticiaId" />
                <label>Fecha:</label>
                <input type="date" id="fecha" name="fecha" required asp-for="Fecha" /><br /><br>

                <label>Ciudad:</label>
                <select id="ciudad" asp-for="CiudadId" required>
                    <option selected="selected" value="">-- Seleccionar ciudad --</option>
                    @foreach (var item in Model.Ciudades)
                    {
                        <option value=@item.Id>@item.Nombre</option>
                    }
                   
                </select><br /><br>

                <label>Autor:</label>
                <select id="autor"  asp-for="AutorId" required>
                    <option selected="selected" value="">-- Seleccionar autor --</option>
                    @foreach (var item in Model.Autores)
                    {
                        <option value=@item.Id>@item.Nombre</option>
                    }
                    
                </select><br /><br>

                <label>Imagen:</label>
                <input type="file" id="fileUpload1" asp-for="Imagen" accept=".jpg"  /><br /><br>

                <label>Contenido:</label>
                <textarea id="contenido" asp-for="Contenido" rows="20" required></textarea><br /><br>

                <div>
                    <input type="submit" value="Editar Noticia" />
                </div>
            </div>
            <p class="">
                @Html.ValidationSummary(true)
            </p>
        </form>
    </main>
</body>
</html>


